<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Controller.Eliminar_PozasActivity">

    <include layout="@layout/actionbar_toolbar" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_hight"
        android:text="Para eliminar una poza, la cantidad de cuyes en la poza debe ser 0"
        android:textAlignment="center"
        android:textSize="@dimen/textSize_hight"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_low"
        android:layout_marginTop="@dimen/margin_hight"
        android:layout_marginEnd="@dimen/margin_low"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/margin_hight">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ingrese ID:"
            android:textSize="@dimen/textSize_medium"/>
        <EditText
            android:layout_width="200sp"
            android:id="@+id/etIdPoza"
            android:layout_marginStart="@dimen/margin_low"
            android:layout_height="wrap_content"
            android:hint="ID de la poza"
            android:textStyle="bold"
            android:textSize="@dimen/textSize_medium"
            android:textAlignment="center"/>
    </LinearLayout>

    <Button
        android:id="@+id/btnAgregar"
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:text="Eliminar"
        android:onClick="btnEliminarClick"
        android:theme="@style/RaisedButtonDark" />


</LinearLayout>