<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Controller.PreguntaActivity"
    android:background="@drawable/fondo_app"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bienvenido"
        android:gravity="center"
        android:textSize="60sp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/descPregunta"
        android:gravity="center"
        android:textSize="@dimen/textSize_hight"
        android:padding="@dimen/margin_low"
        android:layout_margin="@dimen/margin_defect"
        android:background="@color/white"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_weight="1">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Manualmente"
            android:onClick="btnManualClick"
            android:theme="@style/RaisedButtonDark"
            android:layout_margin="@dimen/margin_low"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recomendado"
            android:onClick="btnRecomendadoClick"
            android:theme="@style/RaisedButtonDark"
            android:layout_margin="@dimen/margin_low"/>

    </LinearLayout>



</LinearLayout>