<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@drawable/fondo">

    <ImageView
        android:layout_width="160dp"
        android:layout_height="71dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:src="@drawable/cuy"
        android:contentDescription="TODO"></ImageView>

    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="150dp"
        android:layout_weight="2"
        android:background="@drawable/btn_cuadroiniciosesion"
        android:orientation="vertical"
        android:padding="15dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Ingresa tu correo "
            android:textSize="35sp"
            android:textColor="@color/colorTextoNegro"></TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Recuperar Contraseña"
            android:textSize="20sp"></TextView>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/btn_iniciosesion"
            android:hint="Email"
            android:gravity="center"
            android:textSize="20sp"
            android:inputType="textEmailAddress"></EditText>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Recuperar Contraseña"></Button>
    </LinearLayout>

</LinearLayout>